@model ThemePark.Ticket

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Purchase a ticket</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h5>Prices</h5>
        <ul class="list-group list-group-horizontal mb-5">
            <li class="list-group-item">
                <p>Child: $8.00</p>
            </li>
            <li class="list-group-item">
                <p>Student: $10.00</p>
            </li>
            <li class="list-group-item">
                <p>Veteran: $10.00</p>
            </li>
            <li class="list-group-item">
                <p>Adult: $12.00</p>
            </li>
            <li class="list-group-item">
                <p>Season: $40.00</p>
            </li>
        </ul>
        <div class="form-group">
            @Html.LabelFor(model => model.TicketCode, "Select your ticket type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TicketCode", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TicketCode, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Purchase" class="btn btn-lg btn-outline-success" />

            </div>
        </div>
    </div>
}

