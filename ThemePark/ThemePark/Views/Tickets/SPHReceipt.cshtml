@model ThemePark.Ticket
@{
    ViewBag.Title = "SPHReceipt";
}

<h2>SPHReceipt</h2>

<div>
    @if (Model.Price == (decimal)20.00)
    {
        <h4>Park Employee Discounted Season Pass Receipt</h4>
    }
    
    else{ 
        <h4>Season Pass Receipt</h4>
    }
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TicketNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TicketNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TicketCode1.TicketType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TicketCode1.TicketType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @ViewBag.TotalPrice
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateOfPurchase)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateOfPurchase)
            </dd>

        </dl>
    
</div>

<p>
    @Html.ActionLink("To Profile", "SPH_Profile", "Home", null, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("New Purchase", "Create", "Tickets", null, new { @class = "btn btn-primary btn-lg" })
</p>

