        <th>
            @Html.DisplayFor(model => model.WeeklyAvg)
        </th>

        <th></th>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MonthlyTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonthlyAvg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedMonth)
        </th>
        <th></th>
    </tr>
    <tr>
        <th>
            @Html.DisplayFor(model => model.MonthlyTotal)
        </th>
        <th>
            @Html.DisplayFor(model => model.MonthlyAvg)
        </th>
        <th>
            @using (Html.BeginForm("AdmissionsReport", "Data", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.DropDownListFor(model => model.SelectedMonth, Model.Months)
                <input type="submit" value="Submit" />
            }

        </th>

        <th></th>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => Model.Rainouts)
        </th>
