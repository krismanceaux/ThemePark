@model ThemePark.ViewModels.AdmissionsVM

@{
    ViewBag.Title = "AdmissionsReport";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Admissions Report</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DailyTotal)
        </th>
        
        <th></th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.DailyTotal)
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WeeklyTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeeklyAvg)
        </th>

        <th></th>
    </tr>
