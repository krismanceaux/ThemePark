    </tr>
    <tr>
        <th>
            @Html.DisplayFor(model => model.Rainouts)
        </th>
        <th>
            @Html.DisplayFor(model => Model.MonthlyRainouts)
        </th>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.YearlyTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearlyAvg)
        </th>
