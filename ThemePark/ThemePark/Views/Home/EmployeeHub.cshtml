
@{
    ViewBag.Title = "EmployeeHub";
}

<h2>EmployeeHub</h2>

@* Our grid system *@
<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6">
                <div class="card">
                    <img src=@Url.Content("~/Media/silhouette.jpg") alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title">Profile Management</h3>
                        <p class="card-text">Manage your personal information.</p>
                        @Html.ActionLink("Manage Personal Information", "EmployeeProfile", "Home", null, new { @class = "btn btn-lg btn-outline-success" })
                    </div>
                </div>
            </div>


            <div class="col-xl-6">
                <div class="card h-100">
                    <img src=@Url.Content("~/Media/maintenance.jpg") alt="" class="card-img-top h-25">
                    <div class="card-body">
                        <h3 class="card-title">Maintenance</h3>
                        <p class="card-text">Access Maintenance Database</p>
                        @Html.ActionLink("Access", "Index", "Maintenance", null, new { @class = "btn btn-lg btn-outline-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
