<div class="m-5">
    @if (ViewBag.AccessLevel == "")
    {

    }
    else if (ViewBag.AccessLevel == "Manager")
    {
        <h4>Currently logged into a Manager account</h4>
    }
    else if (ViewBag.AccessLevel == "Employee")
    {
        <h4>Currently logged into an Employee account</h4>
    }
    else if (ViewBag.AccessLevel == "SPH")
    {
        <h4>Currently logged into a Season Pass Holder account</h4>
    }
</div>

@*content*@
<div class="container">
    <div class="row my-5 align-items-center">
        <div class="col-sm-6 col-md-4">
            <div class="card" style="width: 18rem;">
                <img src=@Url.Content("~/Media/rideswing1.jpg") class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Purchase Ticket</h5>
                    <p class="card-text">Purchase your choice between seasonal or a regular daily ticket</p>
                    @Html.ActionLink("Tickets", "Create", "Tickets", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="card" style="width: 18rem;">
                <img src=@Url.Content("~/Media/Map.jpg") class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Park Map</h5>
                    <p class="card-text">Explore our theme park map here</p>
                    @Html.ActionLink("Map", "Park_Map", "PlanVisit", null, new { @class = "btn btn-primary" })

                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="card" style="width: 18rem;">
                <img src=@Url.Content("~/Media/Employee.jpg") class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Career</h5>
                    <p class="card-text">Know more about us through here</p>
                    <p> @Html.ActionLink("About Us", "AboutUs", "ParkInformation", null, new { @class = "btn btn-primary" })<p>

                    <p> @Html.ActionLink("Employee Login", "Login", "EmployeeAccount", null, new { @class = "btn btn-primary" })<p>
                </div>
            </div>
        </div>

    </div>
</div>




